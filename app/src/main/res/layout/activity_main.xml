<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginBottom="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

    <ImageButton
        android:id="@+id/darkMode"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="#00000000"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/darkmode" />

        <ImageButton
        android:id="@+id/mute"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="#00000000"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/volume_off_button" />

        <ImageButton
        android:id="@+id/vibrate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="#00000000"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/vibration_button" />
    </LinearLayout>

    <com.google.android.material.appbar.MaterialToolbar
        android:elevation="10dp"
        app:title="@string/app_name"
        app:titleTextColor="?attr/colorOnPrimary"
        android:layout_alignParentStart="true"
        android:gravity="start"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:menu="@menu/drawer_menu" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button3"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/cardView"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        android:text="Pause Detection"
        android:textSize="18sp"
        app:icon="@drawable/pause_button" />

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Material3.CardView.Elevated"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="28dp"
        android:layout_marginStart="50dp"
        app:cardElevation="10dp">

        <ProgressBar
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:theme="@style/pbarcolor"
            android:id="@+id/progressbar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"/>


    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="28dp"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="No metal detected" />

        <TextView
            android:textStyle="italic"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="microTesla"
            android:textSize="18sp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/magneticFieldStrengthTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="130sp"
            tools:text="00" />

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Î¼T"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </LinearLayout>
    </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/flashlight_off"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

</RelativeLayout>
